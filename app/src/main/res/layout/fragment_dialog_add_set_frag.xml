<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/TextView_dialog_reps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="Reps"
                android:textColor="@color/F5ABC73"
                android:textSize="20sp" />

            <NumberPicker
                android:id="@+id/NumberPickerReps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/TextView_dialog_reps">

            </NumberPicker>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/TextView_dialog_weight1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/NumberPickerReps"
                android:paddingLeft="10dp"
                android:text="Weight"
                android:textColor="@color/F5ABC73"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="50">
                <NumberPicker
                    android:id="@+id/NumberPickerWeight1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/TextView_dialog_reps"
                    android:layout_toRightOf="@+id/NumberPickerReps"
                    android:layout_weight="1">

                </NumberPicker>

                <NumberPicker
                    android:id="@+id/NumberPickerWeight2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/TextView_dialog_reps"
                    android:layout_toRightOf="@+id/NumberPickerWeight1"
                    android:layout_weight="1">

                </NumberPicker>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/button_dialog_OK"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/NumberPickerWeight1"
            android:text="OK" />

    </LinearLayout>



</LinearLayout>