<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:weightSum="1">

    <TextView
        android:id="@+id/TV_addExerciseDialog_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:text="Info"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/TV_addExerciseDialog_reps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Reps"
                android:textSize="18sp" />

            <NumberPicker
                android:id="@+id/NumberPickerAddExerciseAddReps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></NumberPicker>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/TV_addExerciseDialog_sets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Sets"
                android:textSize="18sp" />


            <NumberPicker
                android:id="@+id/NumberPickerAddExerciseAddSets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></NumberPicker>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/button_addExercise_dialog_WithRepsSets_OK"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:text="TilfÃ¸j"

        />

</LinearLayout>